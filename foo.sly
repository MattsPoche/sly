(define-syntax (my-unless form)
  (define fst (car form))
  (set! form (cdr form))
  (define condition (car form))
  (define body (cdr form))
  ;; (datum->syntax fst (list #'if (list #'not condition)
  ;; 						   (cons #'begin body)
  ;; 						   (void)))
  #`(if (not #,condition)
		(begin #,body)
		(void)))


((lambda ()
   (define (not x) x)
   (my-unless #t
			  (display "this should not be printed!\n"))))
